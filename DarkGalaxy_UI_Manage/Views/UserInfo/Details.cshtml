@model DarkGalaxy_UI_Manage.Models.UserInfoViewModel

@{
    ViewBag.Title = "个人资料";
    Layout = "~/Views/Shared/_TabLayout.cshtml";
}

<form class="layui-form layui-form-pane" action="">
    <!-- 帐户 -->
    <fieldset class="layui-elem-field layui-field-title dgalaxy-title">
        <legend>帐户</legend>
    </fieldset>
    <div class="layui-form-item">
        <label class="layui-form-label">用户名</label>
        <div class="layui-input-block">
            <input class="layui-input" type="text" placeholder="用户未绑定用户名" autocomplete="off" value="@Model.UserAccountModel.UserName" disabled>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">邮箱</label>
        <div class="layui-input-block">
            <input class="layui-input" type="text" placeholder="用户未绑定邮箱" autocomplete="off" value="@Model.UserAccountModel.Email" disabled>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">手机号码</label>
        <div class="layui-input-block">
            <input class="layui-input" type="text" placeholder="用户未绑定手机号码" autocomplete="off" value="@Model.UserAccountModel.Phone" disabled>
        </div>
    </div>

    <!-- 个人资料 -->
    <fieldset class="layui-elem-field layui-field-title dgalaxy-title">
        <legend>个人资料</legend>
    </fieldset>
    <div class="layui-form-item">
        <label class="layui-form-label">头像</label>
        <div id="UpImage" class="layui-input-block">
            <img class="dgalaxy-portrait" src="@Model.UserInfoModel.PicturePath">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">昵称</label>
        <div class="layui-input-block">
            <input class="layui-input" type="text" placeholder="用户未输入昵称" autocomplete="off" value="@Model.UserInfoModel.NickName" disabled>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">性别</label>
        <div class="layui-input-block">
            <select id="Gender" lay-verify="required" disabled="">
                <option value="2">保密</option>
                <option value="1">男</option>
                <option value="0">女</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">出生日期</label>
        @{
            string Birthdate = "";
            if (null != Model.UserInfoModel.Birthdate)
            {
                Birthdate = ((DateTime)Model.UserInfoModel.Birthdate).ToString("yyyy-MM-dd");
            }
            else { }
        }
        <div class="layui-input-block">
            <input class="layui-input" type="text" placeholder="用户未输入出生日期" autocomplete="off" value="@Birthdate" disabled>
        </div>
    </div>
    <div class="layui-form-item layui-form-text">
        <label class="layui-form-label">个性签名</label>
        <div class="layui-input-block">
            <textarea class="layui-textarea" placeholder="用户未输入个性签名" disabled>@Model.UserInfoModel.Description</textarea>
        </div>
    </div>
</form>

@section Foot
{
    <!-- 初始化基本信息 -->
    <script>
        //初始化下拉列表选中值
        $(function () {
            $('#Gender').val('@Convert.ToInt32(Model.UserInfoModel.Gender)');
        });
    </script>
    <!-- layui -->
    <script>
        //加载表单
        layui.use('form', function () {
            var form = layui.form;

            //图片标题查看
            layer.photos({
                photos: '#UpImage',
                anim: 0 //0-6的选择，指定弹出图片动画类型
            });
        });
    </script>
}
